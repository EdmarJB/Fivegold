@model FiveGold.Models.Mapeamento.Receita

<script>
    $(document).ready(function () {
        $("#preloader").hide();
    })
</script>

<div class="modal-header" style="background-color:green">
    <h3 class="modal-title" style="color:white;">Detalhes da Receita &nbsp;<i class="fas fa-sort-amount-up"></i></h3>
    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div style="background-color:rgba(0,255,0,0.1); margin-left:0px; padding:10px">

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CatReceita.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CatReceita.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Conta.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Conta.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Valor)*@
            R$ @Model.Valor.ToString("###,###,##0.00")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Data)*@
            @Model.Data.ToString("dd/MM/yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        @*<dt>
                @Html.DisplayNameFor(model => model.Pago)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Pago)
            </dd>*@

    </dl>
</div>
