@model FiveGold.Models.Mapeamento.DespesaCartao

<script>
    $(document).ready(function () {
        $("#preloader").hide();
    })
</script>

<div class="modal-header" style="background-color:darkorange">
    <h3 class="modal-title" style="color:white;">Detalhes da Despesa Cartao &nbsp;<i class="fas fa-credit-card"></i></h3>
    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="row col-md-12" style="background-color:rgba(255,220,50,0.1); margin-left:0px; padding-top:10px">
    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.CatDespesa.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CatDespesa.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Valor)
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.Valor)*@
                R$ @Model.Valor.ToString("#,###,##0.00")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataCompra)
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.DataCompra)*@
                @Model.DataCompra.ToString("dd/MM/yyyy")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>
    </div>

    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.DataPrimeiraParcela)
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.DataPrimeiraParcela)*@
                @Model.DataPrimeiraParcela.ToString("dd/MM/yyyy")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataUltimaParcela)
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.DataUltimaParcela)*@
                @Model.DataUltimaParcela.ToString("dd/MM/yyyy")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.QtdParcela)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QtdParcela)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ValorParcela)
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.ValorParcela)*@
                R$ @Model.ValorParcela.ToString("#,###,##0.00")
            </dd>
        </dl>
    </div>
</div>
