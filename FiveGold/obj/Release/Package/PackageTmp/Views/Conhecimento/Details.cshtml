@model FiveGold.Models.Mapeamento.Conhecimento

@{
    ViewBag.Title = "Conteudo";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}
<script>
    function fazer() {
        $(document).ready(function () {
            $("#IDConhecimento").val($("#IDCon").val());
        });
    }
</script>

<head>
    <title>@Html.DisplayFor(model => model.Titulo)</title>
    <link href="rss.xml" rel="alternate" title="RSS Feed" type="application/rss+xml" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<div id="Hero" style="background-image:url(@Url.Content(Model.TemaConhecimento.Logo)); width: 100%" class="hero-post">
    <div class="content-wrapper flex w-container">
        <a href="#Intro" class="scroll-down w-hidden-medium w-inline-block"></a>
        <div class="hero-post-text">
            <div class="bottom-border">
            </div>
            <div class="bottom-border mini">
                <h1 class="h1-title large">@Html.DisplayFor(model => model.Titulo)</h1>
            </div>
        </div>
    </div>
    <div class="overlay-2"></div>
</div>
<div id="Intro" class="_2-content-section">
    <div class="content-wrapper w-container">
        <div class="title-medium">
            <h2>@Html.DisplayFor(model => model.Titulo)</h2>
        </div>
        @Html.DisplayFor(model => model.Texto)
        <div class="final-dots">...</div>
        <div style="display:none">
            <input type="text" name="IDCon" id="IDCon" value="@Model.IDConhecimento" />
        </div>
        <div>
            @{ Html.RenderAction("CriarComentario", "ComentarioConhecimento");}
        </div>
        <br /><hr />
        <h2>Comentários</h2>
        <br /><br />
        <div style="width: 70%; height:auto; background-color:blue">
            @foreach (var item in ViewBag.comentarios)
            {
                <div style="width: 100%;">
                    <div style="float: left; width:60px; margin: 10px 0px 0px 0px; padding:10px; display: inline-block;">
                        <img src="~/Content/Imagens/Icones/user.png" />
                    </div>
                    <div style="float: left; max-width:10%; min-width:90%; margin: 10px 0px 0px 0px; padding:10px; display: inline-block;">
                        <spam style="color:black; font-weight:500">@item.NomeCompleto</spam><span style="color:gray; font-size:12px">em @Convert.ToDateTime(item.DataComentario).ToString("dd-MM-yyyy")</span>
                        <br />
                        @item.TextoComentario
                        <br />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

