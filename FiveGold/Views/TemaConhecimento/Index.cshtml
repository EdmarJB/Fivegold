@model IEnumerable<FiveGold.Models.Mapeamento.TemaConhecimento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tema de conhecimento</h2>

<p>
    @Html.ActionLink("Novo tema", "Create", new { }, new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Logo))
                {
                    <img src="@Url.Content(item.Logo)" alt="Image" style="width:60px;height:60px;max-width: 100%; height: auto;" />
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IDTema }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.IDTema }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Voltar", "../Dashboard/PainelADM", new { }, new { @class = "btn btn-primary" })