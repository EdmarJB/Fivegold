@model FiveGold.Models.Mapeamento.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<div cz-shortcut-listen="true">
    <div id="Hero">
        <div class="flex" style="height:800px">
            <div class="_37-column">
                <div class="offset-box">
                    <div class="title-white">5 GOLD</div>
                    <h1 class="hero-heading">SUA VIDA FINANCEIRA CONTROLADA DE FORMA SIMPLES!</h1>
                    <div class="borders medium">
                        <div class="white-line"></div>
                    </div>
                    <div>
                        <p class="subtitle-white">Planejamento financeiro, vamos juntos!</p>
                    </div>
                    @*<div class="top-border large"><a href="#Intro" class="button-6 w-button">Voltar</a></div>*@
                </div>
            </div>
            <div class="_65-column">
                <div class="_5-form">
                    <div class="form-title">
                        <div class="regular-title medium">Cadastro 5 GOLD</div>
                    </div>
                    <div class="free-class-form w-form">

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", id = "cadastro" }))
                        {
                            <div style="color:white">
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "alert alert-warning" })
                            </div>
                            <div class="bg-white">
                                <div class="form-spacing">
                                    <p class="paragraph small">Preencha os dados para realizar o cadastro</p>
                                </div>
                                <div class="input-spacing">
                                    @Html.EditorFor(model => model.NomeCompleto, new { htmlAttributes = new { @class = "_2-text-field nome w-input", placeholder = "Nome Completo" } })
                                    @Html.ValidationMessageFor(model => model.NomeCompleto, "", new { @class = "text-danger" })
                                    @*<input type="text" class="_2-text-field name w-input" maxlength="256" name="Name" data-name="Name" placeholder="Nome" required="">*@
                                </div>
                                <div class="input-spacing">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "_2-text-field email w-input", placeholder = "E-Mail" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    @*<input type="email" class="_2-text-field email w-input" maxlength="256" name="Email" data-name="Email" placeholder="Seu Email" required="">*@
                                </div>
                                <div class="input-spacing">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "_2-text-field password w-input", placeholder = "Senha" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    @*<input type="password" class="_2-text-field email w-input" maxlength="256" name="pass" data-name="pass" placeholder="Sua Senha" required="">*@
                                </div>
                                <div class="input-spacing">
                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "_2-text-field password w-input", placeholder = "Confirmar Senha" } })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    @*<input type="password" class="_2-text-field email w-input" maxlength="256" name="pass" data-name="pass" placeholder="Sua Senha" required="">*@
                                </div>
                                <div class="bottom-border checkbox">
                                    <div class="input-spacing checkbox w-checkbox">
                                        <input type="checkbox" id="checkbox" name="checkbox" data-name="Checkbox" required="" class="checkbox-2 w-checkbox-input">
                                        <label for="checkbox" class="w-form-label">Eu aceito os <a href="@Url.Action("TermoUso", "Account")" value="facebook" target="_blank">Termos de Uso</a></label>
                                    </div>
                                </div>
                            </div>
                            <input type="button" onclick="CheckTermosUso()" id="btn" value="Cadastrar" class="_4-submit-button w-button">
                        }

                        @*<div class="_4-success-message w-form-done">
                                <div class="bottom-border small"><img src="https://uploads-ssl.webflow.com/5b889b66b9decafdf8542925/5b889b66b9deca33de542976_5a943cc1d16f790001731d5c_Done.png" width="30" alt=""></div>
                                <div>Obrigado! Seu cadastro foi realizado!</div>
                            </div>
                            <div class="error-message w-form-fail">
                                <div>Oops! Algum erro no formulário</div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function CheckTermosUso() {
        if ($("#checkbox").is(":checked")) {
            $("#cadastro").submit();
            document.getElementById('btn').value = "Aguarde...";
            document.getElementById('btn').disabled = true;
        }
    }
</script>