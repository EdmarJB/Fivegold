@model FiveGold.Models.Mapeamento.Conhecimento

@{
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<style>
    .container {
        /*width: 100vw;*/
        /*height: 100vh;*/
        /*background: #6C7A89;*/
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .box {
        width: 500px;
        /*height: 300px;*/
        background: #fff;
    }

    .botao {
        /*font-weight: bold;*/
        padding: 10px 40px;
        float: left;
        border-top-width: 1px;
        border-right-width: 1px;
        border-bottom-width: 1px;
        border-left-width: 1px;
        border-bottom-style: solid;
        border-top-color: darkorange;
        border-right-color: darkorange;
        border-bottom-color: darkorange;
        border-left-color: darkorange;
        color: white;
        background-color: rgb(255, 81, 53);
        /*margin-left: 20px;*/
    }

        .botao:hover {
            background-color: rgb(250,62,32);
            /*CSS 3*/
            /*border-radius: 10px 0px 10px 0px;*/
            color: white;
        }

    .botaoVoltar {
        /*font-weight: bold;*/
        text-decoration: none;
        padding: 8px 40px;
        float: left;
        border-top-width: 1px;
        border-right-width: 1px;
        border-bottom-width: 1px;
        border-left-width: 1px;
        border-bottom-style: solid;
        /*border-top-color: darkorange;
        border-right-color: darkorange;
        border-bottom-color: darkorange;
        border-left-color: darkorange;*/
        color: white;
        background-color: rgb(25,126,186);
        /*margin-left: 20px;*/
    }

        .botaoVoltar:hover {
            background-color: rgb(13,86,123);
            /*CSS 3*/
            /*border-radius: 10px 0px 10px 0px;*/
            color: white;
        }
</style>

<h2>Editar conhecimento</h2>
<div class="container">
    <div class="box">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="_2-content-section">
                <div class="content-wrapper w-container">
                    <div class="_8-form">
                        <div class="title">
                            <h1>Conhecimento</h1>
                        </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IDConhecimento)
                        @Html.HiddenFor(model => model.UserName)
                        @Html.HiddenFor(model => model.NomeCompleto)
                        @Html.HiddenFor(model => model.DataPost)

                        <div>
                            @Html.LabelFor(model => model.IDTema, htmlAttributes: new { @class = "title" })
                            <div class="col-md-10">
                                @Html.DropDownList("IDTema", null, htmlAttributes: new { @class = "_2-select-field w-select" })
                                @Html.ValidationMessageFor(model => model.IDTema, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div>
                            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "title" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "text-field w-input" } })
                                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div>
                            @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "title" })
                            <div class="col-md-10">
                                <textarea class="_5-text-area w-input" id="Texto" name="Texto" rows="10">@Model.Texto</textarea>
                                @*@Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Salvar" class="btn botao" style="margin-right:20px; cursor:pointer" />
                                @Html.ActionLink("Voltar", "../Conhecimento/IndexValidacao", new { }, new { @class = "botaoVoltar" })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>