@model IEnumerable<FiveGold.Models.Mapeamento.CatReceita>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categorias de Receita</h1>

<p>
    @Html.ActionLink("Nova categoria", "Create", new { }, new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IDCatReceita }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.IDCatReceita }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.IDCatReceita }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<br />
@Html.ActionLink("Voltar", "../Dashboard/PainelADM", new { }, new { @class = "btn btn-primary" })